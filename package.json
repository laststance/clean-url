{
  "name": "clean-url",
  "version": "1.0.3",
  "description": "Removes tracking parameters from url",
  "license": "ISC",
  "author": "Ryota Murakami <dojce1048@gmail.com> (https://github.com/laststance)",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "typecheck": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "install:playwright": "playwright install",
    "lint": "eslint \"tests/e2e/**/*.js\"",
    "validate": "pnpm lint && pnpm test:unit && pnpm typecheck"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.258",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "bestzip": "^2.2.1",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wxt": "^0.20.11"
  },
  "keywords": [
    "chrome-extension",
    "privacy",
    "url-cleaning",
    "tracking-parameters",
    "utm-removal"
  ]
}
